{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "rootDir": "./source",
        "baseUrl": "./source",
        "outDir": "./typecheck"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "source/**/*.ts"
    ]
}
